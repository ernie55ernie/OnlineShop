<div style="margin-left: 3%; margin-right: 3%;" class="bs-example" data-example-id="striped-table">
    <div class="page-header">
    	<h1>Create History</h1>
    </div>

    <h2 ng-show="showResult">Results:</h2>
    <table class="table table-striped" ng-show="showResult">
        <thead>
            <tr>
                <th>#</th>
                <th>CID</th>
                <th>List</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="result in results track by $index">
                <th>{{$index+1}}</th>
                <th>{{result.CID}}</th>
                <th>{{result.ShoppingList}}</th>
            </tr>
        </tbody>
    </table>
    

    <div class="form-group">
      <label for="usr">Kinds of Products:</label>
      <input type="text" class="form-control" id="usr" ng-model="kinds">
      <label for="usr">Amount of Generated List:</label>
      <input type="text" class="form-control" id="usr" ng-model="total">
    </div>
    <table class="table table-striped">
        <thead>
        	<tr>
    		    <th></th>
    	    	<th>Product Name</th>
    	    	<th>Price</th>
    	    	<th>Chance</th>
    	    </tr>
        </thead>
    	<tbody>
    		<tr ng-repeat="a in product track by $index">
    		    <th><img style="width: 100px; height: 72px" ng-src="{{products[$index].pimage}}"></th>
    		    <th>{{products[$index].pname}}</th>
    		    <th>{{products[$index].pprice}}</th>
    		    <th><input type="text" placeholder="Chance" ng-model="productprob[$index].prob"></th>
    	    </tr>
<!--     	    <tr>
    		    <th><img style="width: 100px; height: 72px" src="img/skin2.jpg"></th>
    		    <th>skin no.2</th>
    		    <th>270</th>
    		    <th><input type="text" placeholder="Chance"></th>
    	    </tr> -->
    	</tbody>
    </table>
    <h1 ng-show="exceed">Exceed Kinds of Products that we Offer</h1>
    <button type="button" class="btn btn-primary btn-lg" ng-click="submit()">Submit</button>
</div>